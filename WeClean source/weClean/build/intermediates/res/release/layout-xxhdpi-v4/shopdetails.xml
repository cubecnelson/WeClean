<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/shopnamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/ShopName"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shopnamelabel"
        android:layout_alignBottom="@+id/shopnamelabel"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/shopnamelabel"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/phonetextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shopnamelabel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/Phoneno"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phonetextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phonetextView1"
        android:layout_alignBottom="@+id/phonetextView1"
        android:layout_below="@+id/shopname"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/phonetextView1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/addresstextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phonetextView1"
        android:layout_below="@+id/phonetextView1"
        android:layout_marginTop="30dp"
        android:text="@string/Address"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addresstextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phonetextView2"
        android:layout_alignBaseline="@+id/addresstextView3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addresstextView3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="@string/Price"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" >

    </ListView>

</RelativeLayout><!-- From: file:/C:/Users/Hin%20Chi%20Choi/Documents/work/weclean/WeClean%20source/weClean/src/main/res/layout-xxhdpi/shopdetails.xml -->