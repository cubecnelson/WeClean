<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="4" 
    android:id="@+id/loginlayout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="2" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/logo"
            android:gravity="center" />

        <Spinner
            android:id="@+id/language_spinner1"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:paddingRight="35dp"
            android:visibility="invisible"
             />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinner1"
            android:layout_below="@+id/spinner1"
            android:layout_marginRight="26dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="4" >

        <EditText
            android:id="@+id/mobile_editText2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/username_box"
            android:ems="10"
            android:hint="@string/Entermobileno"
            android:paddingRight="35dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:maxLength="8" />

        <EditText
            android:id="@+id/password_editText3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/pwd_box"
            android:ems="10"
            android:hint="@string/Passwordoptional"
            android:paddingRight="45dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
             android:textSize="12dp" 
             android:inputType="textPassword"
             />

        <Button
            android:id="@+id/login_button1"
            android:layout_width="130dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@drawable/blue_border"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forget_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/forget_pass"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#00a2d6"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/signup_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:src="@drawable/login_18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <Button
            android:id="@+id/howwork_imageView1"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="@drawable/blue_border"
            android:text="@string/howitwork"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="13dp" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Hin%20Chi%20Choi/Documents/work/weclean/WeClean%20source/weClean/src/main/res/layout-xxhdpi/login.xml -->